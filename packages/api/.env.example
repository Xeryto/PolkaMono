# Environment Configuration
ENVIRONMENT=development
DEBUG=True

# Copy this file to .env for local development

# Project Information
PROJECT_NAME=PolkaAPI - Authentication Backend
VERSION=1.0.0

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production
OAUTH_REDIRECT_URL=http://localhost:8000/api/v1/auth/oauth/callback
ACCESS_TOKEN_EXPIRE_MINUTES=30
EMAIL_VERIFICATION_CODE_EXPIRE_MINUTES=10

# Database Configuration
# For production, use the full database URL
DATABASE_URL=postgresql://user:pass@localhost:3000/polka

# Alternative: Environment-specific database URLs
# DEV_DATABASE_URL=postgresql://user:password@localhost:5432/polka_dev
# STAGING_DATABASE_URL=postgresql://user:password@localhost:5432/polka_staging

# CORS Configuration (comma-separated origins)
# BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:19006

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# OAuth Redirect URL
OAUTH_REDIRECT_URL=http://localhost:8000/api/v1/auth/oauth/callback

# Payment Integration
YOOKASSA_SHOP_ID=your-yookassa-shop-id
YOOKASSA_SECRET_KEY=your-yookassa-secret-key

# Email Service
UNISENDER_API_KEY=your-unisender-api-key
UNISENDER_FROM_EMAIL=noreply@yourdomain.com
UNISENDER_FROM_NAME=Polka Team
UNISENDER_LIST_ID=your-unisender-list-id

# Logging
LOG_LEVEL=DEBUG
